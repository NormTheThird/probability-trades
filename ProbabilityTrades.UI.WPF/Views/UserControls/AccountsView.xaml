<UserControl x:Class="ProbabilityTrades.UI.WPF.Views.UserControls.AccountsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:helper="clr-namespace:ProbabilityTrades.UI.WPF.Helper"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility" />
        <helper:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibility" />
        <helper:DecimalToCommaSeparatedStringConverter x:Key="DecimalToCommaSeparatedStringConverter"/>
    </UserControl.Resources>

    <Grid x:Name="Card_Grid"
            Background="Transparent"
            Height="Auto"
            VerticalAlignment="Top"
            Margin="10,0,10,0">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Kraken -->
        <Border Grid.Column="0"
                Background="#373E46"
                CornerRadius="10"
                Height="Auto"
                Margin="10">
            <Border.Style>
                <Style TargetType="Border">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding KrakenAccountDetails.IsLoading}" Value="True">
                            <Setter Property="Opacity" Value=".5"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding KrakenAccountDetails.IsLoading}" Value="False">
                            <Setter Property="Opacity" Value="1"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <StackPanel Orientation="Vertical">

                <!-- Kraken Header -->
                <TextBlock Grid.Row="0"
                           Foreground="#D3D8DC"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left"
                           FontSize="20"
                           FontFamily="Fonts/#Roboto Regular"
                           Margin="20,20,0,0"                           
                           Text="Kraken" />

                <!-- Kraken Error Message -->
                <TextBlock Grid.Row="0"
                           Foreground="Red"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left"
                           FontSize="16"
                           FontFamily="Fonts/#Roboto Regular"
                           Margin="20,10,0,0"      
                           TextWrapping="Wrap"
                           Text="{Binding KrakenErrorMessage}">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding KrakenErrorMessage}" Value="">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <StackPanel Orientation="Vertical">

                    <!-- Total Value -->
                    <Border Height="75"
                            Background="#292F34"
                            CornerRadius="10"
                            Margin="20,25,20,25">

                        <Grid>
                            <TextBlock Visibility="{Binding KrakenAccountDetails.IsLoading, Converter={StaticResource InverseBooleanToVisibility}}"
                                       Foreground="#8F99A7"
                                       VerticalAlignment="Top"
                                       HorizontalAlignment="Left"
                                       FontSize="16"
                                       FontFamily="Fonts/#Open Sans Regular"
                                       Margin="18,12,0,0"
                                       Text="Total Value (USD)"/>
                            <TextBlock Visibility="{Binding KrakenAccountDetails.IsLoading, Converter={StaticResource InverseBooleanToVisibility}}"
                                       Foreground="#E9EBED"
                                       VerticalAlignment="Top"
                                       HorizontalAlignment="Left"
                                       FontSize="20"
                                       FontFamily="Fonts/#Saira Regular"
                                       Margin="18,34,0,0"
                                       Text="{Binding KrakenAccountDetails.TotalValueUSD, StringFormat='${0:N2}', Mode=TwoWay}"/>
                            <TextBlock Visibility="{Binding KrakenAccountDetails.IsLoading, Converter={StaticResource BooleanToVisibility}}"
                                       Foreground="#E9EBED"
                                       VerticalAlignment="Top"
                                       HorizontalAlignment="Left"
                                       FontSize="20"
                                       FontFamily="Fonts/#Saira Regular"
                                       Margin="18,34,0,0"
                                       Text="LOADING ......"/>
                            <Border Height="55"
                                    Width="60"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right"
                                    Margin="0,0,10,0"
                                    CornerRadius="10"
                                    Background="Transparent">
                                <Image HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Source="{Binding KrakenAccountDetails.StatusImageSource}"
                                       Stretch="Fill" ></Image>
                            </Border>


                        </Grid>
                    </Border>

                    <!-- Account Balance Details -->
                    <Border Visibility="{Binding KrakenAccountDetails.IsConnected, Converter={StaticResource BooleanToVisibility}}"
                            Background="#292F34"
                            CornerRadius="10"
                            Margin="20,0,20,25">
                        <Grid>
                            <DataGrid ItemsSource="{Binding KrakenAccountDetails.AccountBalanceDetails}" 
                                      Style="{StaticResource DataGridStyle}"          
                                      RowStyle="{StaticResource DataGridRowStyle}"
                                      RowHeaderStyle="{StaticResource DataGridRowHeaderStyle}"
                                      ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                                      AlternatingRowBackground="#373E46"
                                      CanUserAddRows="False"
                                      GridLinesVisibility="None"
                                      Margin="0,10,0,10"
                                      AutoGenerateColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="" 
                                                        Binding="{Binding AlternateName}"
                                                        Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Current Price" 
                                                        Binding="{Binding CurrentPriceInUSD, Converter={StaticResource DecimalToCommaSeparatedStringConverter}}" 
                                                        Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Balance" 
                                                        Binding="{Binding Balance, Converter={StaticResource DecimalToCommaSeparatedStringConverter}}"
                                                        Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Value" 
                                                        Binding="{Binding EstimatedValueUSD, Converter={StaticResource DecimalToCommaSeparatedStringConverter}}"
                                                        Width="*">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="HorizontalAlignment" Value="Right"/>
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                                <Setter Property="Margin" Value="0,0,10,0" />
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>

                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>

                    <TextBlock Foreground="#8F99A7"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Left"
                               FontSize="16"
                               FontFamily="Fonts/#Open Sans Regular"
                               Margin="20,0,20,20"
                               Text="{Binding KrakenAccountDetails.LastUpdatedMessage}"/>

                </StackPanel>

            </StackPanel>

        </Border>

    </Grid>

</UserControl>