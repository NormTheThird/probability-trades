<UserControl x:Class="ProbabilityTrades.UI.WPF.Views.UserControls.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:helper="clr-namespace:ProbabilityTrades.UI.WPF.Helper"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility" />
        <helper:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibility" />
    </UserControl.Resources>

    <Grid x:Name="Card_Grid"
            Background="Transparent"
            Height="Auto"
            VerticalAlignment="Top"
            Margin="10,0,10,0">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Kraken -->
        <Border Grid.Column="0"
                Background="#373E46"
                CornerRadius="10"
                Height="Auto"
                Margin="10">

            <StackPanel Orientation="Vertical">

                <!-- Kraken Header -->
                <TextBlock Grid.Row="0"
                           Foreground="#D3D8DC"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left"
                           FontSize="20"
                           FontFamily="Fonts/#Roboto Regular"
                           Margin="20,20,0,0"                           
                           Text="Kraken" />
                
                <!-- Kraken Error Message -->
                <TextBlock Grid.Row="0"
                           Foreground="Red"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left"
                           FontSize="16"
                           FontFamily="Fonts/#Roboto Regular"
                           Margin="20,10,0,0"      
                           TextWrapping="Wrap"
                           Text="{Binding KrakenErrorMessage}">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding KrakenErrorMessage}" Value="">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <Border Background="#292F34"
                        CornerRadius="10"
                        Margin="20,15,20,25">

                    <StackPanel Orientation="Vertical"
                                Margin="0,25,0,0">

                        <TextBlock Style="{StaticResource TextBoxLabelTopStyle}"
                                   Text="API Key"/>
                        <TextBox Style="{StaticResource TextBoxStyle}"
                                 Background="#373E46"
                                 Text="{Binding  KrakenAccountKeys.ApiKey}"
                                 Margin="25,0,25,25"></TextBox>

                        <TextBlock Style="{StaticResource TextBoxLabelTopStyle}"
                                   Text="Private Key"/>
                        <TextBox Style="{StaticResource TextBoxStyle}"
                                 Background="#373E46"
                                 Text="{Binding KrakenAccountKeys.PrivateKey}"
                                 Margin="25,0,25,25"></TextBox>

                        <Button Style="{StaticResource ButtonStyle}"
                                Command="{Binding SaveKrakenApiKeysCommand}"
                                Content="Save"
                                Margin="25,0,25,25">
                        </Button>

                    </StackPanel>

                </Border>

            </StackPanel>

        </Border>

    </Grid>
</UserControl>