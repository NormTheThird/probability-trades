    <!-- Navigation Menu -->
    <Style x:Key="SideMenuStyle" TargetType="Border">
        <Setter Property="Background" Value="#373E46" />
        <Setter Property="CornerRadius" Value="4,0,0,4" />
        <Setter Property="MinWidth" Value="200" />
        <Setter Property="Margin" Value="2,2,0,2" />
    </Style>
    <Style x:Key="MenuStackPanelStyle" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Vertical" />
        <Setter Property="Background" Value="#2E333A" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="Margin" Value="0,180,0,0" />
    </Style>
    <Style x:Key="NavigationMenuButtonStyle" TargetType="custom:NavigationMenuButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Border x:Name="border"
                                Background="#373E46"
                                Height="50"
                                VerticalAlignment="Top">
                            <ContentPresenter Content=""/>
                        </Border>

                        <Image Source="{Binding Image, RelativeSource={RelativeSource TemplatedParent}}"                 
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"              
                               Margin="20,0,0,0"
                               Height="40"
                               Width="40"
                               Stretch="Uniform" />

                        <TextBlock Foreground="#E9EBED"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   FontSize="18"
                                   Text="{TemplateBinding Content}"
                                   FontFamily="Fonts/#Open Sans Regular"
                                   Margin="70,0,0,0" />
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" TargetName="border" Value="#4A555E" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" TargetName="border" Value="#292F34" />
                        </Trigger>
                        <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource Self}}" Value="True">
                            <Setter Property="Background" TargetName="border" Value="#292F34" />
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


