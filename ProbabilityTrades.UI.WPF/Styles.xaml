                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Base Styles -->
    <Style x:Key="TextBoxStyle" TargetType="{x:Type TextBox}">
        <Setter Property="Height" Value="35" />
        <Setter Property="FontFamily"  Value="Fonts/#Open Sans Regular" />
        <Setter Property="FontSize" Value="17" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Background"  Value="#292F34" />
        <Setter Property="Foreground" Value="#E8EAEC" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="8,7,0,0" />
        <Setter Property="CaretBrush" Value="#FFFFFF" />
    </Style>

    <Style x:Key="TextBoxLabelTopStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Foreground" Value="#8F99A7" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontFamily" Value="Fonts/#Open Sans Regular" />
        <Setter Property="Margin" Value="25,0,0,5" />
    </Style>

    <Style x:Key="ButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="Height" Value="40" />
        <Setter Property="Background" Value="#C850F2" />
        <Setter Property="Foreground" Value="#FFFFFF" />
        <Setter Property="Width" Value="120" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">

                    <Border x:Name="border"
                             BorderThickness="0"
                             Background="#C850F2"
                             CornerRadius="10">

                        <TextBlock x:Name="BtnText"
                                    Text="{TemplateBinding Content}"
                                    Foreground="#FFFFFF"
                                    FontSize="14"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    FontFamily="Fonts/#Open Sans SemiBold" />
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" TargetName="border"  Value="#7E22A6" />
                        </Trigger>
                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <!-- Application Buttons -->
    <Style x:Key="BaseApplicationButton" TargetType="Button">
        <Setter Property="Height" Value="30" />
        <Setter Property="Width" Value="30" />
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="VerticalAlignment" Value="Top" />
    </Style>
    
    <ImageBrush x:Key="close_app_image"
                ImageSource="Assets/icons8-power-off-64.png"
                Stretch="Uniform" />
    <Style x:Key="CloseAppStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource BaseApplicationButton}">
        <Setter Property="Margin" Value="0,15,30,0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border"
                            BorderThickness="0"
                            Background="{StaticResource close_app_image}">
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" TargetName="border" Value="{StaticResource close_app_image}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" TargetName="border" Value="{StaticResource close_app_image}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <ImageBrush x:Key="max_app_image"
                ImageSource="Assets/icons8-maximize-64.png"
                Stretch="Uniform" />
    <Style x:Key="MaxAppStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource BaseApplicationButton}">
        <Setter Property="Margin" Value="0,15,85,0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border"
                            BorderThickness="0"
                            Background="{StaticResource max_app_image}">
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" TargetName="border" Value="{StaticResource max_app_image}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" TargetName="border" Value="{StaticResource max_app_image}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <ImageBrush x:Key="min_app_image"
                ImageSource="Assets/icons8-minimize-64.png"
                Stretch="Uniform" />
    <Style x:Key="MinAppStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource BaseApplicationButton}">
        <Setter Property="Margin" Value="0,15,140,0" />
        <Setter Property="Template">
            <Setter.Value>
